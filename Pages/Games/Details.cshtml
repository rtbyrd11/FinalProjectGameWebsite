@page
@model FinalProjectGameWebsite.Pages.Games.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4> Game </h4>
    <hr />
    <dl class="row">
        <dt class="col-md-4">
            @Html.DisplayNameFor(model => model.Game.Title)
        </dt>
        <dd class="col-md-8">
            @Html.DisplayFor(model => model.Game.Title)
        </dd>
        <dt class="col-md-4">
            @Html.DisplayNameFor(model => model.Game.Rating)
        </dt>
        <dd class="col-md-8">
            @Html.DisplayFor(model => model.Game.Rating)
        </dd>
        <dt class="col-md-4">
            @Html.DisplayNameFor(model => model.Game.Description)
        </dt>
        <dd class="col-md-8">
            @Html.DisplayFor(model => model.Game.Description)
        </dd>
        @foreach(var c in Model.Game.Characters)
        {
            <dt class="col-md-4">
                @Html.DisplayNameFor(model => c.Name)
            </dt>
            <dd class="col-md-8">
                @Html.DisplayFor(model => c.Name)
            </dd>
            <dt class="col-md-4">
                @Html.DisplayNameFor(model => c.WeaponOfChoice)
            </dt>
            <dd class="col-md-8">
                @Html.DisplayFor(model => c.WeaponOfChoice)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Game.GameId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
<hr />
@{
    var prevDisabled="";
    if (Model.PageNum <= 1)
    {
        prevDisabled = "disabled";
    }
}
<nav aria-label="Page Navigation">
<ul class="pagination">
    <li class="page-item @prevDisabled"><a class="page-link"asp-page="./Index" asp-route-PageNum="@(Model.PageNum - 1)">Previous</a></li>
    <li class="page-item"><a class="page-link"asp-page="./Details" asp-route-PageNum="@(Model.PageNum + 1)">Next</a></li>
</ul>
</nav>